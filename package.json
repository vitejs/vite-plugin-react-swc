  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "@swc/core": "^1.3.26"
  },
  "peerDependencies": {
    "vite": "^4"
  },
  "devDependencies": {
    "@nabla/tnode": "^0.8.0",
    "@playwright/test": "^1.29.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "@types/semver": "^7.3.13",
    "esbuild": "^0.16.17",
    "fs-extra": "^11.1.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.2",
    "semver": "^7.3.8",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  }
}
