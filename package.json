{
  "name": "@vitejs/plugin-react-swc-monorepo",
  "version": "3.0.1",
  "private": true,
  "scripts": {
    "dev": "scripts/bundle.ts --dev",
    "build": "scripts/bundle.ts",
    "test": "playwright test",
    "prettier": "pnpm prettier-ci --write",
